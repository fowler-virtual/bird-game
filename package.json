{
  "name": "bird-game",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "vercel-build": "echo \"skip frontend build for Vercel claim API\"",
    "preview": "vite preview",
    "chain": "hardhat node",
    "compile": "hardhat compile",
    "deploy:seed": "hardhat run scripts/deploy-seed.cjs --network localhost",
    "server": "node server/index.cjs",
    "services": "concurrently -n chain,server,dev -c blue,green,magenta \"npm:chain\" \"npm:server\" \"npm:dev\"",
    "accounts": "node scripts/show-accounts.cjs",
    "fund-pool": "node scripts/fund-reward-pool.cjs",
    "deploy-reward-claim": "hardhat run scripts/deploy-reward-claim.cjs --network localhost",
    "deploy:network-state": "hardhat run scripts/deploy-network-state.cjs --network localhost",
    "approve-claim": "node scripts/approve-reward-claim.cjs",
    "check-balance": "node scripts/check-seed-balance.cjs"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "express": "^4.21.0",
    "phaser": "^3.80.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "hardhat": "^2.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
